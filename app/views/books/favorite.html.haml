.box
  -if @books.any?
    #books_list
      - @books.each do |b|
        .book_line
          .pull-left
            =link_to image_tag(b.image.url(:thumb)), b
          .book
            .pull-right
              =link_to '删除', not_like_book_url(b)
            %div
              %div
                =link_to b.name, b
              %div
                =b.description.truncate(50, :omission => '...')
              %div
                ="#{b.count} 本"
              %div
                -b.tags.each do |tag|
                  %span.label=link_to tag.name, show_list_by_tag_book_url(tag.id)
      =paginate @books
  -else
    %h3.center="没有你喜欢的书"
