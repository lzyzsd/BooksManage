.user-box
  %h2="登录"
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %div
      = f.label :email, '邮箱'
      = f.email_field :email
    %div
      = f.label :password, '密码'
      = f.password_field :password
    - if devise_mapping.rememberable?
      %div
        = f.check_box :remember_me
        = f.label :remember_me, '记住我'
    %div= f.submit "登录"
  = render "links"
