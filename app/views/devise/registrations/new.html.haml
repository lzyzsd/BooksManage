.box
  .inner-box
    %h2.text-center='注册新用户'
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      %div
        = f.label :email, "邮箱"
        = f.email_field :email, :class => 'search-text'
      %div
        = f.label :password, "密码"
        = f.password_field :password, :class => 'search-text'
      %div
        = f.label :password_confirmation, "密码验证"
        = f.password_field :password_confirmation, :class => 'search-text'
      %div= f.submit "提交"
    = render "links"
