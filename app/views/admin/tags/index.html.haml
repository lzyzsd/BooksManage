.box
  -@tags.each do |tag|
    .admin-line.admin-attribute
      .pull-left
        =tag.name
      .pull-right
        =link_to '编辑', edit_admin_tag_url(tag), :class => 'btn'
        =link_to '删除', [:admin, tag], :class => 'btn btn-danger', :confirm => "确定删除?", :method => :delete
=link_to '添加', new_admin_tag_url, :class => 'btn'
