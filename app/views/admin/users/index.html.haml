.box
  -@users.each do |user|
    .admin-line.admin-attribute
      .pull-left
        =user.email
        =user.name
      .pull-right
        =link_to '删除', [:admin, user], :class => 'btn btn-danger', :confirm => '确定删除?', :method => :delete
.search-box
  =form_tag search_user_admin_users_url do
    =label_tag :email
    =text_field_tag :email
    =label_tag :name
    =text_field_tag :name
    =submit_tag
